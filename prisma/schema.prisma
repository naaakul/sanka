
generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  accounts      Account[]
  sessions      Session[]
  emailVerified Boolean
  createdAt     DateTime
  updatedAt     DateTime

  @@map("user")
}

